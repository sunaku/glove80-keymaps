    def resolve_compose_keystrokes(composition, os)
      keycodes =
        case os
        when :linux
          composition.sub(/^COMPOSE\b/, '')
        when :macos
          composition
        when :windows
          composition.sub(/^ALT\+/, '').gsub(/\d/, 'KP_N\& ')
        end
        .split

      keystrokes = keycodes.map{ |key| "&kp #{key}" }.join(' ')

      ["COMPOSE_SEQ_#{os.to_s.upcase}(#{keystrokes})"]
    end

