        "N4"    => "PLUS",
        "N5"    => "LT",
        "N6"    => "GT",
        "N7"    => "CARET",
        "N8"    => "AMPS",
        "N9"    => "PRCNT",
        "N0"    => "STAR",
        "SQT"   => "LPAR",
        "DQT"   => "RPAR",
        "COMMA" => "SEMI",
        "DOT"   => "COLON",
        "QMARK" => "EXCL",
        "HASH"  => "DLLR",
        "AT"    => "GRAVE",
        "FSLH"  => "BSLH",
      }
      .each do |normal, shifted|
    %>
    engram_<%= normal %>: engram_shift_<%= normal %>_<%= shifted %> {
        compatible = "zmk,behavior-mod-morph";
        #binding-cells = <0>;
        bindings = <&kp <%= normal %>>, <&kp <%= shifted %>>;
        mods = <(MOD_LSFT|MOD_RSFT)>;
