            high_surrogate = 0xD800 + (codepoint >> 10)
            low_surrogate = 0xDC00 + (codepoint & 0x3FF)
            sprintf("%04X%04X", high_surrogate, low_surrogate)
          else
            sprintf("%04X", codepoint)
          end
        end
      end

