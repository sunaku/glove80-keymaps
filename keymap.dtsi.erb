  %>
      #ifdef WORLD_USE_COMPOSE
      #define <%= has_compose %>
      <%=
        resolve_compose_keystrokes(composition_for_os, os).join(", ")
      %>
      #else
  <%
        end
  %>
      <%= sequence.join(", ") %>
  <%
        if composition_for_os
  %>
      #endif
  <%
        end
  %>
    <%= "#endif" if os_index + 1 == OPERATING_SYSTEMS.length %>
  <%
      end
  %>
  )
  <%
