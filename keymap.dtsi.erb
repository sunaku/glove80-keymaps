#ifndef OPERATING_SYSTEM<%
  OPERATING_SYSTEMS = {
    linux: 1,
    macos: 2,
    windows: 3
  }.each do |os, number|
%>
<%= "//" if number > 1 %>#define OPERATING_SYSTEM <%= number %> // <%= os %><%
  end
