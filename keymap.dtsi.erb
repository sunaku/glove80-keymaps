  #endif
    };

  <%
    end
  %>

    thumb_parang_left_world: thumb_layer_access_parang_left_world {
      compatible = "zmk,behavior-hold-tap";
      flavor = THUMB_HOLDING_TYPE;
      tapping-term-ms = <THUMB_HOLDING_TIME>;
